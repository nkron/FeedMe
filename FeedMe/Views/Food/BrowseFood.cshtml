@model FeedMe.Models.FoodSearchViewModel
@using FeedMe.Domains.Enumerations

@using (Html.BeginForm("Search", "Food", FormMethod.Get))
{
    <h1>Add Food to @Model.Date</h1>
    <div class="form-horizontal">
        <h2>Food Search</h2>
        <row>
            <div class="col-md-4 col-sm-4 col-xs-4">@Html.TextBoxFor(model => model.SearchName)</div>
            <div class="col-md-4 col-sm-4 col-xs-4">
                @Html.DropDownListFor(m => m.MealType, Model.GetTypes())
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </row>
        <div class="form-group">
            <table class="table">
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>
                            @item.FoodName
                        </td>
                        <td>
                            @item.Cals
                        </td>
                        <td>
                            @Html.ActionLink("Food", "AddToMeal", "Food", new { foodID = item.FoodID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}