    <head>
        <link rel="stylesheet" href="~/css/planner.css" />
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Macro', 'Percent total'],
            ['Carbs', @Model.totalMacC],
            ['Protein', @Model.totalMacP],
            ['Fat', @Model.totalMacF]
        ]);

        var options = {
            chartArea: { width: '100%', height: '100%' },
            colors: ['#FCB524', '#52C0BC', '#976fe8'],
            legend: { position: 'none' },
            pieSliceTextStyle: { fontSize: 16 },
            backgroundColor: '#f9f9f9',
            animation: {
                startup: true,
                    duration: 1000
                }
            };
            $(document).ready(function () {
                $('#body').css("opacity", 1);
            });

            var chart = new google.visualization.PieChart(document.getElementById('chartContainer'));

            chart.draw(data, options);
        }

        $(document).ready(function () {
            if (document.getElementById("firstTime")) {
                $('#welcomeModal').modal();
            }
        });

            var goal=0;
            var activity=0;
            function activateCalculator() {
                $('#welcomeModal').modal('hide')
                $('#calculatorModal').modal();
            }
            function GoalSelect(button) {
                $("#GoalRow .button").removeClass("green");
                $(button).addClass("green")
                goal = $(button).val();
            }
            function ActivitySelect(button) {
                $("#ActivityRow .button").removeClass("green");
                $(button).addClass("green")
                activity = $(button).val();
            }
            function CalcMacros() {
                $("#Warning").hide();
                var age = $("#Age").val();
                var weight = $("#Weight").val();
                //Validate
                if (isNaN(age) || isNaN(weight) || age == null || weight == null || age == '' || weight == '') {
                    $("#WarningTxt").text("Must enter numbers for all fields");
                    $("#Warning").show();
                }
                else if (age > 120 || age < 18) {
                    $("#WarningTxt").text("Enter an age between 18 and 120");
                    $("#Warning").show();
                }
                else if (weight < 50 || weight > 500) {
                    $("#WarningTxt").text("Enter a number between 50 and 500");
                    $("#Warning").show();
                }
                else {
                    var calcCals = 0;
                    var calcMacC = 0;
                    var calcMacP = 0;
                    var calcMacF = 0;
                    var age = $("#Age").val();
                    var weight = Number($("#Weight").val()) * 0.453592; //convert to metric
                    var height; //convert to metric
                    var sex = $("input[name='sex']:checked").val();
                    var calories;
                    //calc basal metabolic rate
                    if (sex == 0) {
                        calories = 66.5 + (13.7 * weight) + (5 * 180) - (6.76 * age);
                    }
                    else {
                        calories = 655 + (9.56 * weight) + (1.8 * 180) - (4.68 * age);
                    }
                    //modify for activity level
                    switch (activity) {
                        case 0:
                            calories *= 1.2;
                            break;
                        case 1:
                            calories *= 1.35;
                            break;
                        case 2:
                            calories *= 1.55;
                            break;
                        case 3:
                            calories *= 1.7;
                            break;
                    } 
                    //modify for goals
                    switch (activity) {
                        case 0:
                            calories -=400;
                            break;
                        case 1:
                            break;
                        case 2:
                            calories +=400;
                            break;
                    }
                    //calculate macros from cals

                    $.ajax({
                        type: "POST",
                        url: '/UserProfile/UpdateMacros',
                        data: { cals: calcCals, MacC: calcMacC, MacP: calcMacP, MacF: calcMacF },
                        dataType: 'json',
                        success: function (result) {
                            console.log(result);
                        }
                    })
                    //json update user info
                    //update macro targets manually
                    //either close window or display macros and an ok button
                }
        }
        </script>
