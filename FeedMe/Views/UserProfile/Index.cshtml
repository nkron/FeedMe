@page
@model FeedMe.Models.UserProfileViewModel
@{
    <style>
        .nutrition-card {
            background-color: #f8f9fa;
            border-radius: 25px;
        }
        .target {
            text-align: left;
            padding-right: 0;
        }
        .smallTxt {
            width: 5em;
        }
        .smallerTxt {
            width: 3em;
            
        }
        .percent{
            text-align:left;
            padding-left:0;
            margin-left:0;
            vertical-align:bottom;
        }
        .form-input-label {
            display: inline-block;
            float: left;
            padding-top: 6px;
        }
    </style>
    @*<div class="container" style="margin-top:30px">*@
        <row>
            <h3 class="text-center">@ViewBag.Success</h3>
        </row>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(model => model.Username)</div>
            <div class="col-lg-2">@Html.DisplayFor(model => model.Username)</div>
        </div>
        @using (Html.BeginForm("Update", "UserProfile"))
        {

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">@Html.LabelFor(model => model.FirstName)</div>
                    <div class="col-lg-2">@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})</div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">@Html.LabelFor(model => model.LastName)</div>
                    <div class="col-lg-2">@Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })</div>
                </div>
            </div>
            <div class="card nutrition-card">
                <div class="card-header">
                    <h4>Nutrition Targets</h4>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-1">@Html.LabelFor(model => model.TargetCals)</div>
                                <div class="col-lg-3 target">@Html.TextBoxFor(model => model.TargetCals, new { @class = "smallTxt form-control" })</div>
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row text-center">
                                <div class="col-lg-1">@Html.LabelFor(model => model.TargetMacC)</div>
                                <div class="col-lg-1 target">@Html.TextBoxFor(model => model.TargetMacC, new { @class = "smallerTxt form-control" })</div>
                                <span class="form_input_label">%</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row text-center">
                                <div class="col-lg-1">@Html.LabelFor(model => model.TargetMacP)</div>
                                <div class="col-lg-3 target">@Html.TextBoxFor(model => model.TargetMacP, new { @class = "smallerTxt form-control" })%</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-1">@Html.LabelFor(model => model.TargetMacF)</div>
                                <div class="col-lg-3 target">@Html.TextBoxFor(model => model.TargetMacF, new { @class = "smallerTxt form-control" })%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Save Changes</button>



        }
    @*</div>*@
}
