@page
@model FeedMe.Models.UserProfileViewModel
@{
<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-lg-2">@Html.LabelFor(model => model.Username)</div>
        <div class="col-lg-2">@Html.DisplayFor(model => model.Username)</div>
    </div>
    @using (Html.BeginForm("Update", "UserProfile"))
    {
        <div class="form-group">
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(model => model.FirstName)</div>
                <div class="col-lg-2">@Html.EditorFor(model => model.FirstName)</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-2">@Html.LabelFor(model => model.LastName)</div>
                <div class="col-lg-2">@Html.EditorFor(model => model.LastName)</div>
            </div>
        </div>
        <div class="text-center">
            <div class="form-group">
                <div class="row text-center">
                    <div class="col-lg-12">@Html.LabelFor(model => model.TargetCals)</div>
                </div>
                <row>
                    <div class="col-lg-6">@Html.EditorFor(model => model.TargetCals)</div>
                </row>
            </div>
            <div class="form-group">
                <div class="row text-center">
                    <div class="col-lg-12">Target Carbohydrates</div>
                </div>
                <row>
                    <div class="col-lg-6">@Html.EditorFor(model => model.TargetMacC)</div>
                </row>
            </div>
            <div class="form-group">
                <div class="row text-center">
                    <div class="col-lg-12">Target Protein</div>
                </div>
                <div class="row">
                    <div class="col-lg-6">@Html.EditorFor(model => model.TargetMacP)</div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12 text-center">Target Fat</div>
                </div>
                <row>
                    <div class="col-lg-6">@Html.EditorFor(model => model.TargetMacF)</div>
                </row>

            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    }
</div>
}
